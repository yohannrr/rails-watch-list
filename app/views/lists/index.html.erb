<h1>All Movie Lists</h1>

<% @lists.each do |list| %>
  <h2><%= link_to list.name, list_path(list) %></h2>
  <%= link_to "Edit", edit_list_path(list), class: "btn btn-warning" %>
  <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<% end %>

<%= link_to "Create a New Movie List", new_list_path, class: "btn btn-primary" %>
