<%= simple_form_for [list, Bookmark.new] do |f| %>
  <div class="form-group">
    <%= f.association :movie, collection: Movie.all, prompt: "Choisissez un film" %>
  </div>
  <div class="form-group">
    <%= f.input :comment, label: "Commentaire" %>
  </div>
  <%= f.submit "Ajouter", class: "btn btn-primary" %>
<% end %>
